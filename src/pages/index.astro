---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import "./styles/customBase.css";
import abrownImage from "../content/cards/images/abrown.png";
import pchotiImage from "../content/cards/images/pchoti.png";
---

<Layout
  title="Free Digital Business Card Creator for Dentists - Quick & App-Free"
  description="Elevate your professional networking with our free digital business card creator, designed specifically for dentists. Quick, easy, and no app required for recipients. Make impactful connections today.">
  <div class="flex flex-col">
    <!-- <span><a href="/card/pchoti" transition:name="fullname">Dr Pavinee S Chotiwannaporn DDS, MSc</a></span> -->
    <span
      ><a href="/card/pchoti"
        >Dr Pavinee S Chotiwannaporn DDS, MSc <Image
          src={pchotiImage}
          alt="Dr Pavinee S Chotiwannaporn DDS, MSc"
          width={200}
          height={200 / 1.5}
          format="webp"
          class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"
        /></a
      ></span
    >
    <span
      ><a href="/card/abrown"
        >Aaron Brown <Image
          src={abrownImage}
          alt="Dr Pavinee S Chotiwannaporn DDS, MSc"
          width={200}
          height={200 / 1.5}
          format="webp"
          class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"
        /></a
      ></span
    >
  </div>
</Layout>
